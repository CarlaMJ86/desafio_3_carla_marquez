<h1>Series#new</h1>
<p>Find me in app/views/series/new.html.erb</p>
<h1>Nueva Serie</h1>
<%= form_with url: series_create_path, model: @serie, method: :post do |form| %>
  <div>
    <%= form.label :name, "Ingresa Tu Serie" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :synopsis, "Cuentame de tu serie" %>
    <%= form.text_area :synopsis %>
  </div>
  <div>
    <%= form.label :director, "Dime el Director" %>
    <%= form.text_field :director %>
  </div>
  <div>
    <%= form.submit "Guardar" %>
  </div>
<% end %>